doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Form
        script(src="1.js", defer)
    body
        h1 Enter your name and age:
        form#basicForm
            label(for="name") Name:
            input(type="text", name="name", id="inputName", required)
            br
            label(for="age") Age:
            input(type="number", name="age", id="inputAge", required)
            br
            input(type="submit", value="Submit", id="boton")
        div#result
