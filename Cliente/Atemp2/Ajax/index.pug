doctype html
html
    head
        script(src='./cliente.js', defer)
        style
            | body {
            |   display: flex;
            |   justify-content: center;
            |   align-items: center;
            |   height: 100vh;
            | }
            | 
            | .box {
            |   width: 300px;
            |   padding: 20px;
            |   border: 1px solid #ccc;
            |   border-radius: 5px;
            |   background-color: #f2f2f2;
            | }
            | 
            | .box input[type="text"] {
            |   width: 100%;
            |   padding: 10px;
            |   margin-bottom: 10px;
            |   border: 1px solid #ccc;
            |   border-radius: 5px;
            | }
            | 
            | .box .empty-div {
            |   height: 100px;
            |   border: 1px dashed #d4cfcf;
            |   border-radius: 5px;
            | }
    body
        .box
            input(type='text', placeholder='Enter text', id='inputCiudad')
            .empty-div(id='resultado')

